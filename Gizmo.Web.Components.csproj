<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<Authors>NETProjects</Authors>
		<Product>Gizmo</Product>
		<Description>Gizmo shared razor components library.</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://www.gizmopowered.net/</PackageProjectUrl>
		<PackageIcon>package_icon.png</PackageIcon>
		<PackageIconUrl />
		<RepositoryUrl>https://github.com/GAMP/Gizmo.Web.Components</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		
		<!--Fixes duplicate file error on publish (.NET6 BUG)-->
		<ErrorOnDuplicatePublishOutputFiles>false</ErrorOnDuplicatePublishOutputFiles>
	</PropertyGroup>

	<ItemGroup>
	  <Content Remove="wwwroot\scss\tab.scss" />
	  <Content Remove="wwwroot\scss\_variables.scss" />
	</ItemGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.4" />
	</ItemGroup>

	<ItemGroup>
		<None Include="Resources\package_icon.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="wwwroot\scripts.js" />
		<None Include="wwwroot\scss\tab.scss" />
		<None Include="wwwroot\scss\components.scss" />
		<None Include="wwwroot\scss\button.scss" />
		<None Include="wwwroot\scss\checkbox.scss" />
		<None Include="wwwroot\scss\radio.scss" />
		<None Include="wwwroot\scss\table.scss" />
		<None Include="wwwroot\scss\_variables.scss" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Components\Base\" />
	  <Folder Include="wwwroot\css\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Gizmo.Shared\Gizmo.Shared.csproj" />
	</ItemGroup>

</Project>
