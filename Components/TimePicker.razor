@namespace Gizmo.Web.Components
@inherits InputBase<DateTime?>

<CascadingValue Value="@this" IsFixed="true">

    <div class="@Class @ClassName">

        <GizInput Label="@Label"
                  IsDisabled="@IsDisabled"
                  IsFullWidth="@IsFullWidth"
                  HasOutline="@HasOutline"
                  HasShadow="@HasShadow"
                  Size="@Size"
                  IsValid="@_isValid"
                  ValidationMessage="@_validationMessage"
                  RightIcon="fas fa-clock"
                  @onclick="OnClickInputHandler">

            <input id="@Id"
                   type="text"
                   value="@_text"
                   readonly="@IsReadOnly"
                   disabled="@IsDisabled"
                   style="cursor: pointer;"
                   @oninput="OnInputHandler"
                   @onclick="OnClickInputHandler" />

        </GizInput>

        <Popup Modal="true" IsOpen="@IsOpen" Class="@PopupClassName">

            <div class="giz-time-picker">
                <div class="giz-time-picker-header">
                    <button><span class="giz-time-picker-header--title">@(_hours.ToString().PadLeft(2, '0') ?? "00")</span></button>
                    <div><span class="giz-time-picker-header--title">:</span></div>
                    <button><span class="giz-time-picker-header--title">@(_minutes.ToString().PadLeft(2, '0') ?? "00")</span></button>
                    <div class="giz-time-picker-header--ampm">
                        <button><span class="giz-time-picker-header--label">@(Value.HasValue ? Value.Value.ToString("tt") : DateTime.Now.ToString("tt"))</span></button>
                    </div>
                </div>
                <div class="giz-time-picker-content">
                    <div class="giz-time-picker-content--timer">
                        <button @onclick="OnClickButtonIncreaseHourHandler"><i class="fas fa-angle-up giz-time-picker-content--icon-size"></i></button>
                        <input type="text" value="@_hours" min="0" max="11" maxlength="2">
                        <button @onclick="OnClickButtonDecreaseHourHandler"><i class="fas fa-angle-down giz-time-picker-content--icon-size"></i></button>
                    </div>
                    <div>
                        <span class="giz-time-picker-content--separator">:</span>
                    </div>
                    <div class="giz-time-picker-content--timer">
                        <button @onclick="OnClickButtonIncreaseMinuteHandler"><i class="fas fa-angle-up giz-time-picker-content--icon-size"></i></button>
                        <input type="text" value="@_minutes" min="0" max="59" maxlength="2">
                        <button @onclick="OnClickButtonDecreaseMinuteHandler"><i class="fas fa-angle-down giz-time-picker-content--icon-size"></i></button>
                    </div>
                    <div class="giz-time-picker-content--timer">
                        <button @onclick="OnClickButtonSwitchAMPMHandler"><i class="fas fa-angle-up giz-time-picker-content--icon-size"></i></button>
                        <input type="text" value="@(Value.HasValue ? Value.Value.ToString("tt") : DateTime.Now.ToString("tt"))" readonly maxlength="2">
                        <button @onclick="OnClickButtonSwitchAMPMHandler"><i class="fas fa-angle-down giz-time-picker-content--icon-size"></i></button>
                    </div>
                    @*<div class="giz-time-picker-content--timer-action">
                        <button>OK</button>
                        <button>CANCEL</button>
                    </div>*@
                </div>
                <div class="giz-time-picker-footer">
                    @*<button class="active">12H Format</button>
                    <button>24H Format</button>*@
                    <div><button>OK</button></div>
                    <div><button>CANCEL</button></div>
                </div>
            </div>

        </Popup>
    </div>

    <Overlay Visible="@IsOpen"
             @onclick="OnClickOverlayHandler">
    </Overlay>

</CascadingValue>