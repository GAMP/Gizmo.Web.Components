@namespace Gizmo.Web.Components
@inherits GizInputBase<TValue>

@typeparam TValue

<GizInput Class="@ClassName"
          Style="@Style"
          Label="@Label"
          IsDisabled="@IsDisabled"
          IsFullWidth="@IsFullWidth"
          HasOutline="@HasOutline"
          HasShadow="@HasShadow"
          IsTransparent="@IsTransparent"
          Size="@Size"
          IsValid="@_isValid"
          ValidationMessage="@_validationMessage">

    <input type="text"
           value="@_text"
           disabled="@IsDisabled"
           @oninput="OnInputHandler" />

    <Icon SVGIcon="@Icons.ArrowDown"
          @onclick="OnClickButtonDecreaseValueHandler" />

    <Icon SVGIcon="@Icons.ArrowUp"
          @onclick="OnClickButtonIncreaseValueHandler" />

</GizInput>