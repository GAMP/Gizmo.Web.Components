@namespace Gizmo.Web.Components
@inherits Gizmo.Web.Components.CustomDOMComponentBase

@typeparam TItemType

<tr class="@Class @ClassName"
    @key="Item.GetHashCode()"
    @onclick="@(async (e) => await OnDataRowMouseEvent(e, Item))"
    @onclick:stopPropagation="true"
    @oncontextmenu:preventDefault="@(Parent.ContextMenu != null )"
    @oncontextmenu="ContextMenuHandler"
    >

    @if (IsSelectable && (Parent.ShowCheckBoxes || !Parent.SelectOnClick))
    {
        <td>
            <CheckBox IsChecked="@_selected" IsCheckedChanged="@IsCheckedChangedHandler" IsReadOnly="@Parent.SelectOnClick" />
        </td>
    }

    @foreach (var column in Columns)
    {
        if (column.IsVisible && column.CellTemplate != null)
        {
            <DataGridCell TItemType="@TItemType" Column="column" Item="@Item" />
        }
    }
</tr>

@if (IsDropdown)
{
    <DataGridDetailTemplate Columns="@(Columns.Count())">
        @Parent.DetailTemplate(Item)
    </DataGridDetailTemplate>
}