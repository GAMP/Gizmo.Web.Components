@namespace Gizmo.Web.Components
@inherits CustomDOMComponentBase

<div class="@ClassName"
     id="@Id"
     @ref="@Ref"
     @onclick="OnClickHandler"
     @onclick:stopPropagation=" true">
    
    @if (!string.IsNullOrEmpty(Icon))
    {
        <Icon Source="@Icon" Class="giz-list-item-icon" />
    }

    @ChildContent

    @if (NestedList != null)
    {
        @if (IsExpanded)
        {
            <Icon Source="fas fa-chevron-up" Class="giz-nested-list-expand-icon" />
        }
        else
        {
            <Icon Source="fas fa-chevron-down" Class="giz-nested-list-expand-icon" />
        }
    }
</div>
@if (NestedList != null)
{
    <Collapse Expanded="@IsExpanded">
        <List Class="giz-nested-list" IsDisabled="@IsDisabled">
            @NestedList
        </List>
    </Collapse>
}