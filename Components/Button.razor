@namespace Gizmo.Web.Components
@inherits ButtonBase

<button class="@Class @ClassName @((!string.IsNullOrEmpty(RightIcon) || RightSVGIcon.HasValue) ? ButtonIconRight : "")"
        style="@Style @StyleValue"
        @onclick="@OnClickButtonHandler"
        @onclick:stopPropagation="@StopPropagation"
        aria-label="@Label"
        disabled="@IsDisabled"
        type="@Type"
        name="@Name"
        value="@Value"
        @ref="@Ref"
        @attributes="@Attributes"
        id="@Id">

    <div style="display: flex; align-items: center; @((!string.IsNullOrEmpty(RightIcon) || RightSVGIcon.HasValue) ? "" : "justify-content: center")">
        @if (!string.IsNullOrEmpty(LeftIcon) || LeftSVGIcon.HasValue)
        {
            <Icon Source="@LeftIcon" SVGIcon="LeftSVGIcon" Class="@ButtonIconLeft" Size="@(Size == ButtonSizes.Small ? IconSizes.Small : 
                  (Size == ButtonSizes.Medium ? IconSizes.Medium :
                  (Size == ButtonSizes.Large ? IconSizes.Large :
                  IconSizes.ExtraLarge)))" />
        }

        <div style="display: inline-block; overflow: hidden; text-overflow: ellipsis; @((!string.IsNullOrEmpty(RightIcon) || RightSVGIcon.HasValue) ? "margin-right: auto;" : "")">
            @ChildContent
        </div>

        @if (!string.IsNullOrEmpty(RightIcon) || RightSVGIcon.HasValue)
        {
            <Icon Source="@RightIcon" SVGIcon="RightSVGIcon" Class="@ButtonIconRight" Size="@(Size == ButtonSizes.Small ? IconSizes.Small : 
                  (Size == ButtonSizes.Medium ? IconSizes.Medium :
                  (Size == ButtonSizes.Large ? IconSizes.Large :
                  IconSizes.ExtraLarge)))" />
        }
    </div>

</button>