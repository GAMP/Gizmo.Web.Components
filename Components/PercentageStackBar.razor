@namespace Gizmo.Web.Components
@inherits CustomDOMComponentBase

<div class="@Class @ClassName">
    @for (int i = 0; i < _percentValues.Count; i++)
    {
        var local_i = i;
        <div class="stacked-bar" style="background-color: @Colors[local_i]; width: @(_percentValues[local_i])%;" role="progressbar">
        </div>
    }
</div>
