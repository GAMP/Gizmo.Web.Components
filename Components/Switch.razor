@namespace Gizmo.Web.Components
@inherits CustomDOMComponentBase

<div class="@ClassName @Class">
    <input 
        type="checkbox"
        id="@Id"
        checked="@IsChecked"
        disabled="@IsDisabled"
        @onchange="OnChangeHandler">
    <label for="@Id">
        <div class="giz-switch__control">
            <div class="giz-switch__control__slider-wrapper">
                <div class="giz-switch__control__slider">
                    <div class="giz-switch__control__slider__thumb"></div>
                </div>
            </div>
        </div>
    </label>
</div>